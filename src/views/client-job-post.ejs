            <form id="jobPostForm">
                <!-- Job Basic Details -->
                <div class="form-section">
                    <h2>Job Details</h2>
                    <div class="form-group">
                        <label>Job Title</label>
                        <input type="text" id="jobTitle" required placeholder="Enter job title">
                    </div>
                    <div class="form-group">
                        <label>Job Description</label>
                        <textarea id="jobDescription" rows="4" required placeholder="Provide detailed job description"></textarea>
                    </div>
                </div>

                <!-- Job Category -->
                <div class="form-section">
                    <h2>Job Category</h2>
                    <div class="category-grid" id="categoryGrid">
                        <div class="category-option" data-category="home-services">
                            <i class="fas fa-home"></i>
                            <p>Home Services</p>
                        </div>
                        <div class="category-option" data-category="repair">
                            <i class="fas fa-tools"></i>
                            <p>Repair</p>
                        </div>
                        <div class="category-option" data-category="cleaning">
                            <i class="fas fa-broom"></i>
                            <p>Cleaning</p>
                        </div>
                        <div class="category-option" data-category="painting">
                            <i class="fas fa-paint-roller"></i>
                            <p>Painting</p>
                        </div>
                    </div>

                    <div id="subcategoryContainer" class="subcategory-container">
                        <h3>Select Subcategory</h3>
                        <div class="category-grid" id="subcategoryGrid">
                            <!-- Subcategories will be dynamically populated -->
                        </div>
                    </div>
                </div>

                <!-- Job Logistics -->
                <div class="form-section">
                    <h2>Job Logistics</h2>
                    <div class="form-group">
                        <label>Location</label>
                        <input type="text" id="jobLocation" required placeholder="Enter job location">
                    </div>
                    <div class="form-group">
                        <label>Start Date</label>
                        <input type="date" id="startDate" required>
                    </div>
                    <div class="form-group">
                        <label>Expected End Date</label>
                        <input type="date" id="endDate" required>
                    </div>
                </div>

                <!-- Budget -->
                <div class="form-section">
                    <h2>Budget</h2>
                    <div class="form-group">
                        <label>Price Offered (₹)</label>
                        <input type="number" id="price" required min="0" placeholder="Enter job budget">
                    </div>
                </div>

                <!-- Media Upload -->
                <div class="form-section">
                    <h2>Job Media (Up to 5 files)</h2>
                    <div class="file-upload-container" id="fileUploadContainer">
                        <div class="file-upload-box">
                            <i class="fas fa-cloud-upload-alt fa-2x"></i>
                            <p>Upload File</p>
                            <input type="file" accept="image/*,video/*" id="fileUpload1">
                        </div>
                        <div class="file-upload-box">
                            <i class="fas fa-cloud-upload-alt fa-2x"></i>
                            <p>Upload File</p>
                            <input type="file" accept="image/*,video/*" id="fileUpload2">
                        </div>
                        <div class="file-upload-box">
                            <i class="fas fa-cloud-upload-alt fa-2x"></i>
                            <p>Upload File</p>
                            <input type="file" accept="image/*,video/*" id="fileUpload3">
                        </div>
                        <div class="file-upload-box">
                            <i class="fas fa-cloud-upload-alt fa-2x"></i>
                            <p>Upload File</p>
                            <input type="file" accept="image/*,video/*" id="fileUpload4">
                        </div>
                        <div class="file-upload-box">
                            <i class="fas fa-cloud-upload-alt fa-2x"></i>
                            <p>Upload File</p>
                            <input type="file" accept="image/*,video/*" id="fileUpload5">
                        </div>
                    </div>
                </div>


                <!-- Submit Button -->
                <div class="form-section">
                    <button type="submit" class="btn btn-primary btn-block">Post Job</button>
                </div>
            </form>
        </div>
    </main>

