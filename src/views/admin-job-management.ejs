<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KaamSetu Admin - Job Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin-job-management.css">
    <link rel="icon" type="image/png" href="/images/1.png">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="toggle-sidebar">
            <i class="fas fa-bars"></i>
        </div>
        <div class="logo">
            <img src="/images/1.png" alt="KaamSetu Logo" style="height:40px;width:40px;vertical-align:middle;margin-right:8px;border-radius:8px;" />
            KaamSetu Admin
        </div>
    </header>

    <!-- Sidebar -->
    <nav class="sidebar">
        <ul class="sidebar-menu">
            <li><a href="/admin/dashboard/<%= adminId %>"><i class="fas fa-tachometer-alt"></i>Dashboard</a></li>
            <li><a href="/admin/users/<%= adminId %>"><i class="fas fa-users"></i>User Management</a></li>
            <li><a href="/admin/payments/<%= adminId %>"><i class="fas fa-money-bill-wave"></i>Payment Management</a></li>
            <li><a href="/admin/disputes/<%= adminId %>"><i class="fas fa-gavel"></i>Dispute Management</a></li>
            <li><a href="/admin/jobs/<%= adminId %>" class="active"><i class="fas fa-briefcase"></i>Job Management</a></li>
        </ul>
    </nav>
    <div class="sidebar-overlay"></div>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-header">
            <h1>Job Management</h1>
            <button class="print-btn" onclick="window.print()">
                <i class="fas fa-print"></i> Print Report
            </button>
        </div>

        <div class="search-bar">
            <input type="text" placeholder="Search jobs...">
            <button class="btn btn-primary">Search</button>
        </div>

        <div class="user-table">
            <% if (jobs && jobs.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Job ID</th>
                        <th>Client Name</th>
                        <th>Job Category</th>
                        <th>Status</th>
                        <th>No. of Laborers</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% jobs.forEach(job => { %>
                    <tr>
                        <td><%= job._id %></td>
                        <td><%= job.client_name %></td>
                        <td><%= job.job_category %></td>
                        <td><span class="status <%= job.status %>"><%= job.status.replace(/\b\w/g, l => l.toUpperCase()) %></span></td>
                        <td><%= job.no_of_laborers %></td>
                        <td class="actions">
                            <button class="btn-icon" title="View Details"><i class="fas fa-eye"></i></button>
                            <button class="btn-icon" title="Print Details"><i class="fas fa-print"></i></button>
                            <button class="btn-icon" title="Edit"><i class="fas fa-edit"></i></button>
                        </td>
                    </tr>
                    <% }); %>
                    <!-- <tr>
                        <td>JOB-2025-002</td>
                        <td>Amit Kumar</td>
                        <td>Plumbing Work</td>
                        <td><span class="status completed">Completed</span></td>
                        <td>1</td>
                        <td class="actions">
                            <button class="btn-icon" title="View Details"><i class="fas fa-eye"></i></button>
                            <button class="btn-icon" title="Print Details"><i class="fas fa-print"></i></button>
                            <button class="btn-icon" title="Edit"><i class="fas fa-edit"></i></button>
                        </td>
                    </tr> -->
                </tbody>
            </table>
            <% } else { %>
            <h2>No Jobs Found</h2>
            <% } %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 KaamSetu Admin Panel. All rights reserved.</p>
    </footer>

    <script src="/js/admin-job-management.js"></script>
</body>
</html>